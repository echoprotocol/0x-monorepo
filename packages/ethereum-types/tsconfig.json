{
    "extends": "../../tsconfig",
    "compilerOptions": {
        "typeRoots": ["../../node_modules/@types"],
        "outDir": "lib",
        "rootDir": "src"
    },
    "include": ["src/**/*"],
    "trailing-comma": [true, {
        "singleline": "never",
        "multiline": {
          "objects": "always",     // <==================
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }]
}
